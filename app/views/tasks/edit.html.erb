<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @tasks, url: user_task_path(@user, @task), method: :patch, local: true) do |f| %>
      <%= render "shared/error_messages", object: @task %>
      
      <%= f.label :title, "名称", class: "label-form" %>
      <%= f.text_field :title, value: @task.title, class: "form-control" %>
      
      <%= f.label :note, "詳細", class: "label-form" %>
      <%= f.text_area :note, rows: 5, value: @task.note, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>
